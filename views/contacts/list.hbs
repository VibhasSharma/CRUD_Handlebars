<h3>Contact List</h3>
<a class="btn btn-secondary" href="/contactsList"><i class="fa fa-plus"></i> Add New Contact </a>
<table class="table table-striped">
    <thread>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>E-Mail Address</th>
            <th>Phone Number</th>
            <th>Date of Birth</th>
            <th>Company</th>
            <th></th>
        </tr>
    </thread>
    <tbody>
        {{!-- <div>
            Welcome {{this.fName}}!
        </div> --}}
        {{#each list}}
        <tr>
            <td>{{this.fName}}</td>
            <td>{{this.lName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phoneNumber}}</td>
            <td>{{this.dob}}</td>
            <td>{{this.company}}</td>
            <td>
                <a href="/contactsList/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href = "/contactsList/delete/{{this._id}}" onclick="return confirm('Delete the record');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>